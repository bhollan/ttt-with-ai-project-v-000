#!/usr/bin/env ruby

require_relative '../config/environment'
puts "Welcome to Tic Tac!"
puts "Select number of human players: (0-2)"
  input = STDIN.noecho(&:gets).strip
  if input == "2"
    puts "First player make your move!"
    Game.new.play
  elsif input == "1"
    puts "Who will go first? \n Choose 1 for Computer \n Choose 2 for Human"
    first_player = gets.strip
    if first_player == "1"
      Game.new(Computer.new("X")).play
    elsif first_player == "2"
      Game.new(Human.new("X"), Computer.new("O")).play
    end    
  elsif input == "0"
    Game.new(Computer.new("X"), Computer.new("O")).play
  end

#### Sends input in integers ####

#### Initialize proper game ####

  


